rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function para verificar se o usuário está autenticado.
    function isSignedIn() {
      return request.auth != null;
    }

    // --- REGRAS PARA CADERNOS (NOTEBOOKS) ---
    match /users/{requestUserId} {
      // Allow only the authenticated user to access their own user document and subcollections
      allow read, write: if isSignedIn() && request.auth.uid == requestUserId;

      match /notebooks/{notebookId} {
        // No need for resource.data.userId check here, as the parent match already ensures request.auth.uid == requestUserId.
        allow read, write: if isSignedIn() && request.auth.uid == requestUserId;

        match /notes/{noteId} {
          // Access to notes is implicitly granted if the user can access the parent notebook,
          // which is already secured by the /users/{requestUserId} rule.
          allow read, write: if isSignedIn() && request.auth.uid == requestUserId;
        } // End of match /notes/{noteId}
      } // End of match /notebooks/{notebookId}
    } // End of match /users/{requestUserId}

    // --- REGRAS PARA O CLIP ---
    match /clip/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // --- REGRAS PARA CONFIGURAÇÕES DE USUÁRIO ---
    match /user_settings/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

  }
}